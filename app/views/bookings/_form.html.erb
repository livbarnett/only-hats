<%= simple_form_for [@hat, @booking], data: { controller: 'flatpickr' } do |f| %>
    <%= f.input :start_date, as: :string, input_html: { data: { flatpickr_target: "startDate" } }, label: "Hat-in" %>
    <%= f.input :end_date, as: :string, input_html: { data: { flatpickr_target: "endDate" } }, label: "Hatout" %>
    <%= f.submit "Reserve hat", class: "btn btn-primary row-form-btn mb-3" %>
<% end %>
