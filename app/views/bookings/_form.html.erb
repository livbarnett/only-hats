<%= simple_form_for [@hat, @booking] do |f| %>
<div class="book-form">
      <div class="small-form-box">
        <div class="booking-input-box small-form-input">
          <%= f.input :start_date, as: :date, html5: true, label: "Hat-in" %>
        </div>
        <div class="booking-input-box small-form-input">
          <%= f.input :end_date, as: :date, html5: true, label: "Hatout" %>
        </div>
      <div id="submit-btn">
        <%= f.submit "Reserve hat", class: "btn btn-primary row-form-btn mb-3" %>
      </div>
    </div>
  <% end %>
</div>
